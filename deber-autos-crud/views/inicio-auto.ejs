<% const existeMensaje = typeof mensaje !== 'undefined'%>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<% if(existeMensaje){%>
    <p>MENSAJE: <%= mensaje%></p>
<% } %>

<form  method="get" action="/auto/inicio-auto">
    <label for="busqueda">Busqueda</label>
    <input type="text" name="busqueda" id="busqueda">
    <button>Buscar</button>
</form>

<a href="/auto/crear-auto">
    <button>Crear auto</button>
</a>

<table>
    <tr>
        <th>Identificador</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Color</th>
        <th>AÃ±o</th>
        <th>Puertas</th>
        <th>Acciones</th>
    </tr>
    <% arreglo.forEach((auto)=> {%>
    <tr>
        <td><%= auto.id %></td>
        <td><%= auto.marca %></td>
        <td><%= auto.modelo %></td>
        <td><%= auto.color %></td>
        <td><%= auto.anio %></td>
        <td><%= auto.puertas %></td>
        <td>

            <form action="/auto/eliminar-auto/<%= auto.id %>" method="POST">
                <button type="submit"> Eliminar</button>
            </form>
            <a href="/auto/actualizar-auto/<%= auto.id %>">
                <button>Actualizar</button>
            </a>

        </td>

    </tr>
    <% }) %>
</table>

